{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "app/api",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx-go/nx-go:build",
      "options": {
        "main": "{projectRoot}/main.go"
      }
    },
    "serve": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "main": "{projectRoot}/main.go",
        "cmd": "gow"
      }
    },
    "test": {
      "executor": "@nx-go/nx-go:test"
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    },
    "tidy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "go mod tidy"
      }
    },
    "download": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "go mod download"
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "go get {args.package}"
      }
    },
    "lambda.build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "make build"
      }
    },
    "lambda.serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "sam local start-api"
      },
      "dependsOn": ["lambda.build"]
    },
    "infra.preview": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}/infra",
        "command": "pulumi preview"
      }
    },
    "infra.up": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}/infra",
        "command": "pulumi up -y --stack $PULUMI_STACK"
      }
    },
    "infra.cancel": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}/infra",
        "command": "pulumi cancel"
      }
    },
    "infra.down": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}/infra",
        "command": "pulumi down -y --stack $PULUMI_STACK"
      }
    },
    "infra.secret": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}/infra",
        "command": "pulumi config set --secret {args.key} {args.value}"
      }
    },
    "infra.plaintext": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}/infra",
        "command": "pulumi config set --plaintext {args.key} {args.value}"
      }
    }
  }
}
